<%- include("partials/header"); -%>
<form action="/login" class="form-signin" method="POST">
 <div class="text-center mb-4">
   <img class="mb-4" src="/docs/4.3/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
   <i class="fab fa-stack-overflow fa-6x"></i>
   <h1 class="h3 mb-3 font-weight-normal">Stack OverFlow</h1>
 </div>

 <div class="form-label-group">
   <input type="email" id="inputEmail" class="form-control" name="email" placeholder="Email address" autocomplete="off" required autofocus>
   <label for="inputEmail">Email address</label>
 </div>

 <div class="form-label-group">
   <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" autocomplete="off" required>
   <label for="inputPassword">Password</label>
 </div>
 <button class="btn btn-lg btn-dark btn-block" type="submit">Login</button>
 <a href="/register" class="btn btn-lg btn-secondary btn-block">sign up?</a>
</form>
<%- include("partials/footer"); -%>
